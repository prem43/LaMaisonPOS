@model LaMaisonPOS.Models.ViewModels.POSViewModel
@{
    ViewData["Title"] = "Point of Sale";
}

<div class="pos-container">
    <div class="row g-0 h-100">
        <!-- Left Panel - Cart & Billing -->
        <div class="col-md-4 bg-light border-end left-panel">
            <div class="left-panel-content">
                <!-- Customer Selection -->
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-person"></i></span>
                        <input type="text" class="form-control" id="customerName" value="@Model.CustomerName" placeholder="Customer Name">
                        <button class="btn btn-outline-secondary" type="button"><i class="bi bi-pencil"></i></button>
                        <button class="btn btn-outline-secondary" type="button"><i class="bi bi-eye"></i></button>
                        <button class="btn btn-primary" type="button"><i class="bi bi-plus-circle"></i></button>
                    </div>
                </div>

                <!-- Search Product -->
                <div class="mb-3">
                    <form asp-action="SearchProduct" method="get">
                        <div class="input-group">
                            <input type="text" class="form-control" name="searchTerm" placeholder="Scan/Search product by name/code">
                            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                    <small class="text-muted">Please start typing code/name for suggestions or just scan barcode</small>
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Cart Items -->
                <div class="cart-section mb-3">
                    <table class="table table-sm">
                        <thead class="table-primary">
                            <tr>
                                <th>Product</th>
                                <th class="text-end">Price</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Subtotal</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CartItems.Any())
                            {
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-bold">@item.ProductName</div>
                                            <small class="text-muted">@item.ProductCode</small>
                                        </td>
                                        <td class="text-end">@item.Price.ToString("N2")</td>
                                        <td class="text-center">
                                            <div class="input-group input-group-sm" style="width: 80px;">
                                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQty(@item.ProductId, @(item.Quantity - 1))">-</button>
                                                <input type="text" class="form-control form-control-sm text-center" value="@item.Quantity" readonly>
                                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="updateQty(@item.ProductId, @(item.Quantity + 1))">+</button>
                                            </div>
                                        </td>
                                        <td class="text-end fw-bold">@item.Subtotal.ToString("N2")</td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" onclick="removeItem(@item.ProductId)">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="bi bi-cart-x fs-1"></i>
                                        <p>Cart is empty</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Billing Summary -->
                <div class="billing-summary">
                    <div class="mb-2">
                        <label class="form-label small">Enter Cashback Amount</label>
                        <input type="number" class="form-control" id="cashbackAmount" value="0" step="0.01" onchange="updateDiscount()">
                    </div>

                    <div class="d-flex justify-content-between mb-1">
                        <span>Items</span>
                        <strong>@Model.TotalItems (@Model.CartItems.Count)</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Total</span>
                        <strong id="subtotalAmount">@Model.Subtotal.ToString("N2")</strong>
                    </div>

                    <div class="row mb-2">
                        <div class="col-6">
                            <label class="form-label small mb-0">Order Tax <i class="bi bi-pencil-square text-primary"></i></label>
                            <input type="number" class="form-control form-control-sm" id="taxAmount" value="0.00" step="0.01" readonly>
                        </div>
                        <div class="col-6">
                            <label class="form-label small mb-0">Discount <i class="bi bi-pencil-square text-primary"></i></label>
                            <input type="number" class="form-control form-control-sm" id="discountAmount" value="0.00" step="0.01" onchange="calculateTotal()">
                        </div>
                    </div>

                    <div class="bg-dark text-white p-2 rounded mb-2 d-flex justify-content-between align-items-center">
                        <strong>Total Payable</strong>
                        <h4 class="mb-0" id="totalPayable">@Model.TotalPayable.ToString("N2")</h4>
                    </div>
                </div>
            </div>

            <div class="action-buttons-container">
                <div class="row g-2">
                    <div class="col-6">
                        <button class="btn btn-warning w-100" onclick="suspendOrder()">
                            <i class="bi bi-pause-circle"></i> Suspend
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-info w-100">
                            <i class="bi bi-file-earmark-text"></i> Order
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-danger w-100" onclick="cancelOrder()">
                            <i class="bi bi-x-circle"></i> Cancel
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-secondary w-100">
                            <i class="bi bi-receipt"></i> Bill
                        </button>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-success w-100 btn-lg" onclick="showPaymentModal()" @(Model.CartItems.Any() ? "" : "disabled")>
                            <i class="bi bi-credit-card"></i> Payment
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel - Products Grid -->
        <div class="col-md-8 bg-white right-panel">
            <div class="row g-3">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-3">
                        <div class="card product-card h-100" onclick="addToCart(@product.Id)">
                            <div class="card-body text-center">
                                <div class="product-image-placeholder mb-2">
                                    <i class="bi bi-image fs-1 text-muted"></i>
                                </div>
                                <h6 class="card-title small mb-1">@product.Name</h6>
                                <p class="card-text text-muted small mb-1">@product.Code</p>
                                <p class="card-text fw-bold text-primary">â‚¹@product.Price.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Process Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ProcessPayment" method="post">
                <div class="modal-body">
                    <input type="hidden" name="customerName" id="paymentCustomerName">
                    <input type="hidden" name="taxAmount" id="paymentTaxAmount">
                    <input type="hidden" name="discountAmount" id="paymentDiscountAmount">
                    
                    <div class="mb-3">
                        <label class="form-label">Total Amount</label>
                        <input type="text" class="form-control" id="paymentTotalAmount" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cash Received</label>
                        <input type="number" class="form-control" name="cashReceived" id="cashReceived" step="0.01" required onchange="calculateChange()">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Change</label>
                        <input type="text" class="form-control" id="changeAmount" readonly>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Complete Payment</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let paymentModal;
        
        document.addEventListener('DOMContentLoaded', function() {
            paymentModal = new bootstrap.Modal(document.getElementById('paymentModal'));
        });

        function addToCart(productId) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("AddToCart", "POS")';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'productId';
            input.value = productId;
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }

        function updateQty(productId, quantity) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("UpdateQuantity", "POS")';
            
            const productIdInput = document.createElement('input');
            productIdInput.type = 'hidden';
            productIdInput.name = 'productId';
            productIdInput.value = productId;
            
            const quantityInput = document.createElement('input');
            quantityInput.type = 'hidden';
            quantityInput.name = 'quantity';
            quantityInput.value = quantity;
            
            form.appendChild(productIdInput);
            form.appendChild(quantityInput);
            document.body.appendChild(form);
            form.submit();
        }

        function removeItem(productId) {
            if (confirm('Remove this item from cart?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("RemoveFromCart", "POS")';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'productId';
                input.value = productId;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }

        function updateDiscount() {
            const cashback = parseFloat(document.getElementById('cashbackAmount').value) || 0;
            document.getElementById('discountAmount').value = cashback.toFixed(2);
            calculateTotal();
        }

        function calculateTotal() {
            const subtotal = @Model.Subtotal;
            const tax = parseFloat(document.getElementById('taxAmount').value) || 0;
            const discount = parseFloat(document.getElementById('discountAmount').value) || 0;
            const total = subtotal + tax - discount;
            document.getElementById('totalPayable').textContent = total.toFixed(2);
        }

        function suspendOrder() {
            if (confirm('Suspend this order?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Suspend", "POS")';
                
                const customerName = document.getElementById('customerName').value;
                const taxAmount = document.getElementById('taxAmount').value;
                const discountAmount = document.getElementById('discountAmount').value;
                
                form.appendChild(createInput('customerName', customerName));
                form.appendChild(createInput('taxAmount', taxAmount));
                form.appendChild(createInput('discountAmount', discountAmount));
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function cancelOrder() {
            if (confirm('Cancel this order? All items will be removed from cart.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Cancel", "POS")';
                document.body.appendChild(form);
                form.submit();
            }
        }

        function showPaymentModal() {
            const customerName = document.getElementById('customerName').value;
            const taxAmount = document.getElementById('taxAmount').value;
            const discountAmount = document.getElementById('discountAmount').value;
            const totalPayable = document.getElementById('totalPayable').textContent;
            
            document.getElementById('paymentCustomerName').value = customerName;
            document.getElementById('paymentTaxAmount').value = taxAmount;
            document.getElementById('paymentDiscountAmount').value = discountAmount;
            document.getElementById('paymentTotalAmount').value = totalPayable;
            document.getElementById('cashReceived').value = totalPayable;
            document.getElementById('changeAmount').value = '0.00';
            
            paymentModal.show();
        }

        function calculateChange() {
            const total = parseFloat(document.getElementById('paymentTotalAmount').value) || 0;
            const received = parseFloat(document.getElementById('cashReceived').value) || 0;
            const change = received - total;
            document.getElementById('changeAmount').value = change.toFixed(2);
        }

        function createInput(name, value) {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = name;
            input.value = value;
            return input;
        }
    </script>
}
